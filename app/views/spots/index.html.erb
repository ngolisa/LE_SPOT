<div class="container">
 <h1> All spots(<%= @spots.length %>)</h1>
 <div class="cards">
    <% @spots.each do |spot| %>
      <%= link_to spot_path(spot) do %>




      <div class="card-trip">
        <%= cl_image_tag spot.photo%>
        <div class="card-trip-infos">
          <div>
            <h2><%= spot.description %></h2>
            <p><%= spot.city %></p>
          </div>
          <h2 class="card-trip-pricing"><%= spot.price %> $/H</h2>
         <!--  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
          <%= cl_image_tag spot.user.avatar, class: "card-trip-user avatar-bordered"%>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>


