<h1> </h1>

<div class="container">
  <div class="little_navbar">
     <div>
     <h1> <%= @spot.description %> </h1>
     <p> <%= @spot.address %> </p>
     <p> <%= @spot.city %> </p>
    </div>
    <div>
      <% if current_user == @spot.user %>
        <%= link_to "Edit", edit_spot_path(@spot), class: "btn btn-ghost" %>
        <button type="button" class="btn btn-info"> <%= link_to "Delete", spot_path(@spot),
        method: :delete,
        data: { confirm: "Are you sure?" } %> </button>
      <% end %>
    </div>
  </div>

  <div class="carousel"
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
      <%= cl_image_tag(@spot.photo, class: "d-block w-100") %>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="..." alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="..." alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

 <!--  <button type="button" class="btn btn-primary"><%#= link_to "Book this spot", new_spot_reservation_path(@spot) %></button> -->
  <div>
    <%= simple_form_for @reservation do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {  class: "datepicker"} %>
      <%= f.input :spot_id, as: :hidden, input_html: { value: @spot.id }   %>
      <%= f.submit %>
   <% end %>
  </div>
</div>
