<h1> </h1>

<div class="container">
  <div class="little_navbar">
     <div>
     <h1> <%= @spot.description %> </h1>
     <p> <%= @spot.address %> </p>
     <p> <%= @spot.city %> </p>
    </div>
    <div>
      <% if current_user == @spot.user %>
        <%= link_to "Edit", edit_spot_path(@spot), class: "btn btn-ghost" %>
        <button type="button" class="btn btn-info"> <%= link_to "Delete", spot_path(@spot),
        method: :delete,
        data: { confirm: "Are you sure?" } %> </button>
      <% end %>


    </div>
  </div>

 <!--  <button type="button" class="btn btn-primary"><%#= link_to "Book this spot", new_spot_reservation_path(@spot) %></button> -->
  <div>
    <%= simple_form_for @reservation do |f| %>
      <%= f.input :date, as: :string, required: false, input_html: {  class: "datepicker"} %>
      <%= f.input :spot_id, as: :hidden, input_html: { value: @spot.id }   %>
      <%= f.submit %>
   <% end %>
  </div>
</div>
